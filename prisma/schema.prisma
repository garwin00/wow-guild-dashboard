generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  bnetId        String    @unique
  battletag     String
  bnetRegion    String    @default("eu")
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   @db.Text
  isAdmin       Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  memberships         GuildMembership[]
  characters          Character[]
  accounts            Account[]
  sessions            Session[]
  passwordResetTokens PasswordResetToken[]
  officerNotesAbout   OfficerNote[]       @relation("OfficerNoteTarget")
  officerNotesWritten OfficerNote[]       @relation("OfficerNoteAuthor")
  absenceNotices      AbsenceNotice[]
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Guild {
  id           String   @id @default(cuid())
  name         String
  realm        String
  region       String   @default("eu")
  slug         String   @unique
  bnetGuildId  String?
  wclGuildId   String?
  wclGuildName String?
  imageUrl     String?
  bannerUrl    String?
  theme        String   @default("default")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  memberships    GuildMembership[]
  characters     Character[]
  raidEvents     RaidEvent[]
  logReports     LogReport[]
  mythicScores   MythicPlusScore[]
  officerNotes   OfficerNote[]
  absenceNotices AbsenceNotice[]
}

model GuildMembership {
  id        String      @id @default(cuid())
  userId    String
  guildId   String
  role      GuildRole   @default(MEMBER)
  joinedAt  DateTime    @default(now())

  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  guild     Guild       @relation(fields: [guildId], references: [id], onDelete: Cascade)

  @@unique([userId, guildId])
}

model Character {
  id          String        @id @default(cuid())
  userId      String?
  guildId     String?
  name        String
  realm       String
  region      String        @default("eu")
  class       String
  spec        String?
  role        CharacterRole @default(DPS)
  itemLevel   Int?
  level       Int?
  isMain      Boolean       @default(false)
  guildRank   Int?
  avatarUrl   String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user        User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  guild       Guild?        @relation(fields: [guildId], references: [id])
  signups     Signup[]
  rosters     RosterSlot[]
  parses      CharacterParse[]
  mythicScore MythicPlusScore?
  mythicRuns  MythicPlusRun[]

  @@unique([name, realm, region])
}

model RaidEvent {
  id           String      @id @default(cuid())
  guildId      String
  title        String
  description  String?
  raidZone     String
  scheduledAt  DateTime
  maxAttendees Int         @default(25)
  minItemLevel Int?
  status       EventStatus @default(OPEN)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  guild        Guild       @relation(fields: [guildId], references: [id], onDelete: Cascade)
  signups      Signup[]
  roster       RosterSlot[]
}

model Signup {
  id           String       @id @default(cuid())
  raidEventId  String
  characterId  String
  status       SignupStatus @default(TENTATIVE)
  role         CharacterRole?
  note         String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  raidEvent    RaidEvent    @relation(fields: [raidEventId], references: [id], onDelete: Cascade)
  character    Character    @relation(fields: [characterId], references: [id], onDelete: Cascade)

  @@unique([raidEventId, characterId])
}

model RosterSlot {
  id          String        @id @default(cuid())
  raidEventId String
  characterId String
  groupNumber Int           @default(1)
  slotIndex   Int

  raidEvent   RaidEvent     @relation(fields: [raidEventId], references: [id], onDelete: Cascade)
  character   Character     @relation(fields: [characterId], references: [id], onDelete: Cascade)

  @@unique([raidEventId, slotIndex])
}

model LogReport {
  id          String   @id @default(cuid())
  guildId     String
  wclCode     String   @unique
  title       String
  zone        String?
  startTime   DateTime
  fightCount  Int      @default(0)
  createdAt   DateTime @default(now())

  guild       Guild    @relation(fields: [guildId], references: [id], onDelete: Cascade)
  parses      CharacterParse[]
}

model CharacterParse {
  id            String    @id @default(cuid())
  logReportId   String
  characterId   String
  fightName     String
  difficulty    String?
  parsePercent  Float?
  dps           Float?
  hps           Float?
  deaths        Int       @default(0)
  rank          Int?
  outOf         Int?

  logReport     LogReport @relation(fields: [logReportId], references: [id], onDelete: Cascade)
  character     Character @relation(fields: [characterId], references: [id], onDelete: Cascade)

  @@unique([logReportId, characterId, fightName])
}

enum GuildRole {
  GM
  OFFICER
  MEMBER
  TRIALIST
}

enum CharacterRole {
  TANK
  HEALER
  DPS
}

enum EventStatus {
  OPEN
  CLOSED
  CANCELLED
}

enum SignupStatus {
  ACCEPTED
  TENTATIVE
  DECLINED
}

model MythicPlusScore {
  id          String    @id @default(cuid())
  characterId String    @unique
  guildId     String
  season      String    @default("current")
  all         Float     @default(0)
  dps         Float     @default(0)
  healer      Float     @default(0)
  tank        Float     @default(0)
  updatedAt   DateTime  @updatedAt

  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  guild       Guild     @relation(fields: [guildId], references: [id], onDelete: Cascade)
}

model MythicPlusRun {
  id          String    @id @default(cuid())
  characterId String
  dungeon     String
  shortName   String
  level       Int
  score       Float
  completedAt DateTime
  upgrades    Int       @default(0)
  url         String?
  affixes     String[]
  isTank      Boolean   @default(false)
  isHealer    Boolean   @default(false)

  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)

  @@unique([characterId, dungeon, level, completedAt])
}

model OfficerNote {
  id           String          @id @default(cuid())
  guildId      String
  targetUserId String          // the member being noted
  authorId     String          // officer who wrote it
  content      String          @db.Text
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  guild        Guild           @relation(fields: [guildId], references: [id], onDelete: Cascade)
  targetUser   User            @relation("OfficerNoteTarget", fields: [targetUserId], references: [id], onDelete: Cascade)
  author       User            @relation("OfficerNoteAuthor", fields: [authorId], references: [id], onDelete: Cascade)
}

model AbsenceNotice {
  id          String    @id @default(cuid())
  guildId     String
  userId      String
  startDate   DateTime
  endDate     DateTime
  reason      String?   @db.Text
  createdAt   DateTime  @default(now())

  guild       Guild     @relation(fields: [guildId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}
